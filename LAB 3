from fpdf import FPDF

# Create a PDF document
pdf = FPDF()
pdf.set_auto_page_break(auto=True, margin=15)
pdf.add_page()

# Set title
pdf.set_font('Arial', 'B', 16)
pdf.cell(200, 10, 'Тестування бігового велосипеда', ln=True, align='C')

# Add a description of the object
pdf.ln(10)
pdf.set_font('Arial', '', 12)
pdf.multi_cell(0, 10, '''Об’єкт тестування: Біговий велосипед

Біговий велосипед – це спеціалізований велосипед, призначений для використання на асфальтованих і міських дорогах. Він складається з кількох ключових частин, які забезпечують його функціональність і комфорт користувача:

1. Рама
2. Колеса
3. Педалі
4. Руль
5. Гальмівна система''')

# Add the test cases
pdf.ln(10)
pdf.set_font('Arial', 'B', 14)
pdf.cell(200, 10, 'Тест-кейси для бігового велосипеда:', ln=True)

pdf.set_font('Arial', '', 12)
test_cases = [
    ("Тест на міцність рами", "Перевірити раму на наявність тріщин, деформацій і інших пошкоджень при навантаженні."),
    ("Тест на вагу велосипеда", "Визначити загальну вагу велосипеда в залежності від розміру рами."),
    ("Тест на комфорт сидіння", "Прокататися на велосипеді протягом 30 хвилин."),
    ("Тест на гальмівну ефективність", "Здійснити екстрене гальмування з різних швидкостей."),
    ("Тест на швидкість переключення передач", "Перемикати передачі на різних швидкостях руху."),
    ("Тест на стійкість до вологи", "Поставити велосипед під дощ на 30 хвилин."),
    ("Тест на стійкість коліс до ударів", "Поставити велосипед на нерівну поверхню і прокотити через кілька перешкод."),
    ("Тест на легкість складання і розбирання", "Скласти і розібрати велосипед."),
    ("Тест на рівень шуму при їзді", "Їздити на велосипеді на різних швидкостях."),
    ("Тест на зносостійкість педалей", "Педалювати на велосипеді протягом 10 годин."),
    ("Тест на вібрації при їзді на нерівностях", "Прокатитися по бруківці та інших нерівних поверхнях."),
    ("Тест на ефективність амортизаторів", "Прокатитися по грунтовій дорозі або ямах."),
    ("Тест на міцність гальмівних колодок", "Перевірити знос гальмівних колодок після 100 циклів гальмування."),
    ("Тест на стійкість до зносу покришок", "Прокатитися на велосипеді протягом 50 км по асфальту."),
    ("Тест на регулювання висоти сідла", "Змінити висоту сідла та перевірити, чи є можливість знайти комфортне положення."),
    ("Тест на стабільність керма", "Відкрутити кермо на кілька сантиметрів і проїхати по рівній дорозі."),
    ("Тест на ефективність освітлення", "Перевірити роботу переднього і заднього освітлення."),
    ("Тест на зручність зберігання", "Спробувати скласти велосипед для зберігання у автомобіль."),
    ("Тест на сумісність з аксесуарами", "Перевірити, чи можна встановити кошик, флягу, або інші аксесуари на велосипед."),
    ("Тест на стійкість до ультрафіолетових променів", "Поставити велосипед на сонці протягом кількох годин."),
]

for index, (title, steps) in enumerate(test_cases, 1):
    pdf.ln(5)
    pdf.set_font('Arial', 'B', 12)
    pdf.cell(0, 10, f'{index}. {title}:')
    pdf.set_font('Arial', '', 12)
    pdf.ln(5)
    pdf.multi_cell(0, 10, f'   Кроки: {steps}')

# Save the PDF document
pdf_output_path = "/mnt/data/test_case_bicycle.pdf"
pdf.output(pdf_output_path)

pdf_output_path

